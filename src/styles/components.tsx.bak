  background: ${({ rank }) => {
    if (rank === 1) return 'rgba(255, 215, 0, 0.1)';
    if (rank === 2) return 'rgba(192, 192, 192, 0.1)';
    if (rank === 3) return 'rgba(205, 127, 50, 0.1)';
