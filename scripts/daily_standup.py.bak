    def _is_overdue(self, deadline):
        """Check if deadline is overdue"""
        if not deadline or deadline == "TBD":
            return False
        try:
            deadline_date = datetime.strptime(deadline, "%Y-%m-%d")
            return deadline_date < datetime.now()
        except:
            return False
    
